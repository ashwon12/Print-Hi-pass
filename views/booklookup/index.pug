extends ../partials/layout

block contenthead

    link(href='https://fonts.googleapis.com/css?family=Nanum+Gothic:400,700,800&subset=korean' rel='stylesheet')
    style.
        p {
        font-family: "Nanum Gothic", sans-serif;
        font-size: 26px;
        font-weight: 700;
        }
       

block content
    br
    p * &nbsp;제본 &nbsp; *
    .row 
        //글 위치 배정
        .col-xs-7.col-md-5
        div
            br
            a.btn.btn-outline-dark(href='') 제본 예약하기
            br
            a.btn.btn-outline-dark(href='booklookup/updatebook') 제본목록 올리기(관리자)
    br
    br 


    table(border="1")
        br
        thead
            tr
                td No.
                td 제목
                td 교수님
                td 가격
                td 남은 제본 수

        tbody
            each b,num in books
                tr
                    td=num+1
                    td=b.title
                    td=b.professor
                    td=b.price
                    td=b.stock

