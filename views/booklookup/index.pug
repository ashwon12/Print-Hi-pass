extends ../partials/layout

block contenthead
    style.
        p {
            font-family: "Nanum Gothic", sans-serif;
            font-size: 25px;
            font-weight: bold;
        }

        th{
            padding: 3px;
            line-height: 25px;
            font-size: 16px;
        }

       .table.table-sm {
            width: 700px;
            font-family: "Nanum Gothic", sans-serif;
            margin: auto;
            padding: 8px;
            text-align: center;
            font-size: 16px;
            line-height: 50px;
       }

       .buy {
           padding: 10px;
       }

       
        

block content
    br
    p *&nbsp;Welcome! 제본책 판매합니다!&nbsp;*
    br
    br
    //책 제목 검색 기능 추가하기

    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.1.0/css/all.css' integrity='sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt' crossorigin='anonymous')
    .container
        .row.justify-content-right
            //.col-12.col-md-10.col-lg-60
            .col-md-8.offset-md-5
                .span12
                form#custom-search-form.form-search.form-horizontal.pull-right
                    .input-append.span12
                    input.search-query(type='text' placeholder='Search')
                    button.fas.fa-search.h4.text-body.btn.btn-outline-light
                    

    //제본책 목록 표시
    table(border='1').table.table-sm
        thead.thead-dark
            tr
                th(scope='col') No.
                th(scope='col') 제본명
                th(scope='col') 교수명
                th(scope='col') 가격
                th(scope='col') 재고수
                th(scope='col') 구매하기
                if (user.permission == 1)
                    th(scope='col') 삭제하기

        tbody
            each b,num in books
                tr
                    td=num+1
                    td=b.title
                    td=b.professor
                    td=b.price
                    td=b.stock-b.num_rsv
                    td
                        a.buy(href='/booklookup/reserve'+b._id) 🛒

                    if (user.permission == 1)
                        td
                            a(href='/booklookup/delete'+b._id) 삭제
    br 

    if (user.permission == 1)
        .add
            .col-md-4.offset-md-1
                a.btn.btn-sm.btn-light(href='booklookup/updatebook') 제본목록 올리기(관리자)  
        br